border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

.CodeMirror
  border: 1px solid #eee
  height: auto

.CodeMirror-scroll
  overflow-y: hidden
  overflow-x: auto

.ui-menu
  font-size: x-small

#mainMenuBar
  position: fixed
  top: 8px
  z-index: 2

#fileMenu
  width: 200px

#editMenu
  width: 200px

.menuButton
  font-size: x-small

#boxed
  position: relative
  margin-top: 50px
  width: auto
  height: auto
  z-index: 1

.box-control
  float: left  

.box-control-button
  display: block
  vertical-align: middle
  border-style: none 

.markdown-box
  margin-top: 2px
  margin-bottom: 2px
  margin-left: 4px
  margin-right: 4px

.markdown-box-content .CodeMirror-scroll
  min-height: 3em
  