border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

.CodeMirror
  border: 1px solid #eee
  height: auto

.CodeMirror-scroll
  overflow-y: hidden
  overflow-x: auto

.ui-menu
  font-size: x-small

#mainLogo
  float: left
  margin-left: 12px
  margin-right: 12px
  margin-top: 4px

//#mainMenu
//  float: right

#mainMenuBar
  position: fixed
  top: 8px
  z-index: 2
  width: 100%

#fileMenu
  width: 200px

#editMenu
  width: 200px

.menuButton
  font-size: x-small

#boxed
  position: relative
  margin-top: 50px
  width: auto
  height: auto
  z-index: 1

.box-control
  float: left  
  background-color: rgb(245, 245, 245)

  &.box-view-mode
    background-color: white

.box-control-button
  display: block
  vertical-align: middle
  border-style: none
  
  .ui-button-text
    padding: 4px 
    font-size: xx-small
    background-color: rgb(245, 245, 245)

.markdown-box
  margin-top: 2px
  margin-bottom: 2px
  margin-left: 4px
  margin-right: 4px

.markdown-box-content .CodeMirror-scroll
  min-height: 3em
  