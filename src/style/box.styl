.box
  width 600px
  height 300px
  display: block
  .boxTopMenu
    height 35px
    width 100%
  img.imgToMenu
    visibility hidden
  &:hover
    box-shadow 0px 0px 10px 0px #cfcfcf
    .boxTopMenu
      height 35px
      width 100%
      box-shadow 0px 0px 5px 0px #cfcfcf
      img.imgToMenu
        visibility visible
      
            

.ulMenu
    list-style-type none
    .itemTopMenu
      float right
      margin-right 10px
    
.boxFixed
  box-shadow 0px 0px 10px 0px #cfcfcf

.submenu
  visibility visible
  position relative
  width 200px
  height 150px
  border 1px solid #cfcfcf
  margin 0px 100px 0px 0px