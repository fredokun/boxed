body
  width 100%
  height 100%
  margin 0px
  padding 0px
  font-family 'Arial'
  color #000000
  font-size 11pt

header
  width 100%
  height 40px
  box-shadow 0px 0px 10px 0px #cfcfcf

.container
  margin 0px auto 0px auto
  width 900px

.subMenu
  border 1px solid #cfcfcf
  width 200px
  position absolute
  background-color #ffffff
  margin-right 100px
  position relative
  z-index 4
  ul
    list-style-type none
    margin 0px
    padding 0px
    li
      height 30px
      text-align center
      margin 10px 0px 2px 0px
      a
        color #000000
        text-decoration none
      hr
        width 80%
        

.topMenu
  list-style-type none
  margin 0px
  padding 0px
  float right
  .subMenu
    visibility hidden
    z-index 0
  &:hover
    .subMenu
      z-index 4
      visibility visible
  